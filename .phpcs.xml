<?xml version="1.0"?>
<ruleset name="Custom Standard" namespace="MyProject\CS\Standard">
    <description>Configuration personnalisée de PHP_CodeSniffer par Jérémy Monlouis</description>

    <file>./src</file>

    <arg name="colors"/>

    <rule ref="PSR12"></rule>

    <autoload>/vendor/autoload.php</autoload>
    <!-- reporter le sommaire dans ./docs/phpcs_report.txt -->
    <arg name="report" value="summary"/>
    <arg name="report-file" value="./docs/phpcs_report.txt"/>

</ruleset>
